{
  "name": "rockset-vscode",
  "displayName": "Rockset",
  "description": "Rockset SQL Language Support - Syntax Highlighting, Error Diagnostics, Executing Queries and more",
  "icon": "assets/logo-white.png",
  "galleryBanner": {
    "color": "#DEEDF7",
    "theme": "light"
  },
  "version": "0.8.2",
  "license": "Apache-2.0",
  "publisher": "RocksetInc",
  "repository": "https://github.com/rockset/rockset-js/tree/master/packages/rscode",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rsql",
    "onCommand:extension.rocksetRun",
    "onCommand:extension.rocksetValidate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "rockset",
      "properties": {
        "rockset.apikey": {
          "type": "string",
          "default": "<insert your api key>",
          "description": "An API key is required to access your Rockset account. You can find it in the Rockset Console."
        },
        "rockset.apiserver": {
          "type": "string",
          "default": "https://api.rs2.usw2.rockset.com",
          "description": "Specifies which apiserver to hit w/ rockset"
        }
      }
    },
    "commands": [
      {
        "command": "extension.rocksetRun",
        "title": "Execute Rockset Query"
      },
      {
        "command": "extension.rocksetValidate",
        "title": "Validate Rockset Query"
      }
    ],
    "languages": [
      {
        "id": "rsql",
        "aliases": [
          "RocksetSQL",
          "rsql"
        ],
        "extensions": [
          ".sql",
          ".rsql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rsql",
        "scopeName": "source.sql",
        "path": "./syntaxes/rocksql.tmLanguage"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.js.jsx",
          "source.tsx",
          "source.vue"
        ],
        "scopeName": "rocksql",
        "path": "./syntaxes/rsql-inline-language.json",
        "embeddedLanguages": {
          "meta.embedded.line.ts": "typescript",
          "meta.embedded.inline.rsql": "rsql"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "build": "vsce package --yarn",
    "watch": "webpack --mode none --watch",
    "test": "echo 'no tests'",
    "lint": "eslint 'src/**/*.ts'"
  },
  "devDependencies": {
    "@rockset/eslint-config": "0.8.2",
    "@types/axios": "^0.14.0",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.141",
    "@types/node": "^10.12.21",
    "@types/sql-formatter": "^2.3.0",
    "@types/vscode": "^1.38.0",
    "eslint": "^7.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "glob": "^7.1.4",
    "handlebars": "^4.7.6",
    "jest": "^26.6.3",
    "ts-loader": "^8.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3",
    "vsce": "^1.88.0",
    "vscode-test": "^1.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@rockset/client": "0.8.2",
    "@rockset/core": "0.8.2",
    "sql-formatter": "^2.3.3"
  }
}
