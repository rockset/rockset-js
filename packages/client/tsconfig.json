{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "es2017", "dom"],
    "outDir": "dist",
    "baseUrl": "src",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": [ "src/**/*", "tests/**/*", "examples/**/*" ]
}
